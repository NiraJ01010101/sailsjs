<div class="flex items-center justify-center h-full">
    <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg w-96">
        <h2 class="text-2xl font-semibold text-center mb-6">Login</h2>
        <!-- Display message if any -->
        <% if (!message.length==0) { %>
            <script>
                Toastify({
                    text: "<%= message %>",
                    duration: 3000,
                    // gravity: "top",
                    // position: "right",
                    className: "<%= error ? 'font-bold fixed top-5 right-5 bg-red-500 text-white shadow-lg' : 'font-bold fixed top-5 right-5 bg-green-500 text-white shadow-lg' %>",
                    stopOnFocus: true,
                    // close: false,
                }).showToast();
            </script>
            <% } %>
                <!-- Login Form -->
                <form action="/auth/userLogin" method="POST">
                    <div class="mb-4">
                        <label for="email"
                            class="block text-sm font-semibold text-gray-700 dark:text-gray-300">Email</label>
                        <input type="text" name="email" id="email"
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg mt-2 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white"
                            required>
                    </div>

                    <div class="mb-4">
                        <label for="password"
                            class="block text-sm font-semibold text-gray-700 dark:text-gray-300">Password</label>
                        <input type="password" name="password" id="password"
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg mt-2 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-white"
                            required>
                    </div>

                    <button type="submit"
                        class="w-full bg-blue-500 text-white py-2 rounded-lg mt-4 hover:bg-blue-600 focus:outline-none">Login</button>
                </form>

                <p class="mt-4 text-center text-md">
                    Don't have an account? <a href="/signup" class="text-blue-500 hover:text-blue-700 font-bold">Sign
                        up</a>
                </p>
    </div>
</div>