<link href="https://fonts.googleapis.com/css?family=Lato:300,400" rel="stylesheet">
<script src="https://cdn.tailwindcss.com"></script>
</script>

<body class="bg-gray-900 text-white">

    <!-- Sidebar -->
    <div class="flex h-screen">

        <!-- Sidebar Container -->
        <div class="w-64 bg-gray-800 p-5">
            <h2 class="text-2xl font-semibold text-center text-white mb-8">Flowbite</h2>
            <ul class="space-y-4">
                <li><a href="#" class="block py-2 px-4 rounded hover:bg-gray-700">Home</a></li>
                <li><a href="#" class="block py-2 px-4 rounded hover:bg-gray-700">Profile</a></li>
                <li><a href="#" class="block py-2 px-4 rounded hover:bg-gray-700">Settings</a></li>
                <li><a href="#" class="block py-2 px-4 rounded hover:bg-gray-700">Messages</a></li>
                <li><a href="/logout" class="block py-2 px-4 rounded hover:bg-gray-700">Logout</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col">

            <!-- Navbar -->
            <nav class="bg-gray-800 p-4 flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <button class="text-white lg:hidden" id="toggleSidebar">
                        <i class="fa fa-bars"></i> <!-- You can add an icon here -->
                    </button>
                    <h1 class="text-xl font-bold">Dashboard</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <!-- <a href="#" class="text-white hover:bg-gray-700 p-2 rounded">Profile</a> -->
                    <!-- <a href="#" class="text-white hover:bg-gray-700 p-2 rounded">Notifications</a> -->
                    <!-- <a href="/logout" class="text-white hover:bg-gray-700 p-2 rounded">Logout</a> -->
                </div>
            </nav>

            <!-- Content Area -->
            <div class="flex-1 p-6">
                <h2 class="text-2xl">Welcome to the Dashboard</h2>
                <h3>Welcome, <%= userName %>
                </h3>

                <% if (userRole==='super_admin' ) { %>
                    <h2>You are a Super Admin</h2>
                    <p>Manage everything here.</p>
                    <!-- Add links or sections only for super admins -->
                    <a href="/admin/manage-users">Manage Users</a>
                    <% } else if (userRole==='admin' ) { %>
                        <h2>You are an Admin</h2>
                        <p>Manage content and users with limited permissions.</p>
                        <!-- Add links or sections only for admins -->
                        <a href="/admin/settings">Settings</a>
                        <% } else { %>
                            <h2>You are a Regular User</h2>
                            <p>Access your profile and view content.</p>
                            <!-- Add links or sections for regular users -->
                            <a href="/user/profile">Your Profile</a>
                            <% } %>
            </div>
        </div>

    </div>
</body>