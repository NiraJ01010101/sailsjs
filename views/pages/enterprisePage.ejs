
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <a href="/enterprise/createEnterprise" class="w-full mb-6 flex justify-end">
        <button type="button" class="bg-blue-500 text-white py-3 px-6 rounded-lg shadow-lg hover:bg-blue-600">
            Create New Enterprise
        </button>
    </a>

    <div class="container mx-auto p-6 w-full md:w-3/4 lg:w-1/2 bg-gray-800 text-white rounded-lg">
        <h1 class="text-4xl font-bold mb-8 text-center">Enterprise List</h1>

        <% if (enterprisePageList && enterprisePageList.length > 0) { %>
            <ul class="space-x-4">
                <% enterprisePageList.forEach(function(enterprise) { %>
                    <!-- Card that links to the enterprise details page -->
                    <a href="/enterprise/<%= enterprise.id %>" class="w-full">
                        <li class="bg-gray-700 p-4 rounded-lg shadow-lg cursor-pointer hover:bg-gray-600">
                            <h2 class="text-xl font-semibold text-gray-100"><%= enterprise.displayName %></h2>
                            <p class="text-gray-300">Company Name: <%= enterprise.companyName %></p>
                            <p class="text-gray-300">Contact: <%= enterprise.companyContactNumber %></p>
                            <p class="text-gray-300">Type: <%= enterprise.companyType %></p>
                        </li>
                    </a>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="text-center text-gray-400">No enterprises available at the moment.</p>
        <% } %>
    </div>

    <script>
        // Get the select and the input container
        const companyTypeSelect = document.getElementById('companyType');
        const otherInputContainer = document.getElementById('otherInputContainer');
        const otherCompanyTypeInput = document.getElementById('otherCompanyType');

        // Listen for changes on the select element
        companyTypeSelect.addEventListener('change', function () {
            if (companyTypeSelect.value === 'Other') {
                // Show the input field if "Other" is selected
                otherInputContainer.classList.remove('hidden');
                otherCompanyTypeInput.setAttribute('required', 'required');
            } else {
                // Hide the input field and remove the "required" attribute if another option is selected
                otherInputContainer.classList.add('hidden');
                otherCompanyTypeInput.removeAttribute('required');
            }
        });
    </script>
</body>

</html>